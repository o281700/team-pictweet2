<!DOCTYPE html>
<html>
  <head>
    <title>TeamPictweet2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

     <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header class="header">
    <div class="header__bar row">
      <h1 class="grid-6"><a href="/">僕たち私たちのTweet</a></h1>
      <% if user_signed_in? %>
        <div class="user_nav grid-6">
          <%= link_to "ろぐあうと", destroy_user_session_path, method: :delete %>
          <%= link_to "ちゅいーと", new_tweet_path, class: "post" %>
        </div>
      <% else %>
        <div class="grid-6">
          <%= link_to "ろぐいん", new_user_session_path, class: "post" %>
          <%= link_to "とうろく", new_user_registration_path, class: "post" %>
        </div>
      <% end %>
    </div>
  </header>

  <body>
    <%= yield %>
  </body>
</html>
